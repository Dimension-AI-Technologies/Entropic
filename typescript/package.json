{
  "name": "claude-todo-monitor",
  "version": "1.0.0",
  "description": "Slack-like Electron app for Claude Code Todo monitoring",
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "node scripts/vite-dev.mjs",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "node scripts/vite-build.mjs",
    "verify:screenshot": "node scripts/launch-autosnap.mjs",
    "start": "NODE_ENV=production electron .",
    "dist": "npm run build && electron-builder",
    "dist:portable": "npm run build && electron-builder --win portable",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testPathPattern=TodoManager.test.ts --verbose",
    "update-latest": "node scripts/update-to-latest.js && npm install"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "electron": "^36.9.1",
    "electron-builder": "^26.0.12",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.4.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "electron": ">=36.0.0"
  },
  "build": {
    "appId": "com.claudecode.todomonitor",
    "productName": "ClaudeToDo",
    "directories": {
      "output": "portable"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "ClaudeToDo-Windows.exe"
    },
    "mac": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "ClaudeToDo-macOS"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "ClaudeToDo-Linux.AppImage"
    },
    "portable": {
      "artifactName": "ClaudeToDo-Windows.exe"
    }
  }
}
