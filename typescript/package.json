{
  "name": "claude-todo-monitor",
  "version": "1.0.0",
  "description": "Slack-like Electron app for Claude Code Todo monitoring",
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "node scripts/vite-dev.mjs",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "node scripts/vite-build.mjs",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:portable": "npm run build && electron-builder --win portable",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testPathPattern=TodoManager.test.ts --verbose"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/jest": "^29.5.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0"
  },
  "build": {
    "appId": "com.claudecode.todomonitor",
    "productName": "ClaudeToDo",
    "directories": {
      "output": "portable"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "ClaudeToDo-Windows.exe"
    },
    "mac": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "ClaudeToDo-macOS"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "artifactName": "ClaudeToDo-Linux.AppImage"
    },
    "portable": {
      "artifactName": "ClaudeToDo-Windows.exe"
    }
  }
}