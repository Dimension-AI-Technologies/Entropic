{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/main/**/*", "src/utils/**/*"],
  "exclude": ["node_modules", "dist", "src/main/preload.ts"]
}